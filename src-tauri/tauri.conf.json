{
  "$schema": "../gen/schemas/desktop-schema.json",
  "productName": "Sixarata",
  "version": "0.0.1",
  "identifier": "com.sixarata.desktop",
  "build": {
    "frontendDist": "../app"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Sixarata",
        "width": 1280,
        "height": 800,
        "resizable": true
        }
      ]
  },
  "bundle": {
    "targets": [
      "dmg",
      "app",
      "msi",
      "nsis",
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/app-512.png",
      "icons/app-256.png",
      "icons/app-icon.ico"
    ]
  }
}